    totalTopics: 0,
    totalVotes: 0,
    activeUsers: 0
  });
  const [showScrollTop, setShowScrollTop] = useState(false);
  const [isLoadingStats, setIsLoadingStats] = useState(true);

  useEffect(() => {
    checkAuthStatus();
    fetchStats();

    // Add scroll listener for scroll-to-top button
    const handleScroll = () => {
      setShowScrollTop(window.scrollY > 300);
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  const checkAuthStatus = async () => {
    try {
      const response = await fetch(`${API_BASE}/api/admin/analytics`, {
        credentials: 'include'
      });
      if (response.ok) {
        setIsLoggedIn(true);
        // Try to determine role from current path or cookies
        const path = window.location.pathname;
        if (path.includes('/admin')) setUserRole('admin');
        else if (path.includes('/student')) setUserRole('student');
      }
    } catch (error) {
      // Not logged in
    }
  };

  const fetchStats = async () => {
    try {
      setIsLoadingStats(true);
      const response = await fetch(`${API_BASE}/api/admin/analytics`);
      if (response.ok) {
        const data = await response.json();
        setStats({
          totalTopics: data.totalSubmissions || 0,
          totalVotes: data.weeklyTrends?.reduce((sum, day) => sum + (day.count || 0), 0) || 0,
          activeUsers: data.categoryDistribution?.length || 0
        });
      }
    } catch (error) {
      // Use default stats
      console.log('Could not fetch stats, using defaults');
    } finally {
      setIsLoadingStats(false);
    }
  };

