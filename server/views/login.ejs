<%- include("partials/header", { title: "Login | Smart Desk" }) %>

<div class="max-w-md mx-auto mt-24 bg-white p-8 rounded-xl shadow">
  <h2 class="text-2xl font-bold text-center text-indigo-600 mb-6">
    Login
  </h2>

  <form method="POST" action="/login" class="space-y-4">
    <input class="form-control" name="identifier" placeholder="Roll No / Username" required />
    <input type="password" class="form-control" name="password" placeholder="Password" required />

    <button class="btn btn-primary w-full">
      Login
    </button>
  </form>
</div>

